<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ppl"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="enter your Principal amount"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.08" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/noof"
        android:textColor="@color/white"
        android:inputType="number"
        android:hint="Enter Number of years"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="enter your Rate of Interest here"
        android:inputType="number"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:id="@+id/rate"
        android:layout_weight="0.08" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate simple interest"
        android:id="@+id/butt01"
        android:layout_weight="0.08" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result displayed here"
        android:id="@+id/disp"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_weight="0.19" />
</LinearLayout>