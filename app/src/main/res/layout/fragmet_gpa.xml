<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/white"

        android:id="@+id/gSel"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/ResetButton"
        android:layout_alignStart="@+id/ResetButton" />
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/radioGroup">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2Credit"
        android:id="@+id/CrSub2"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3Credit"
        android:id="@+id/CrSub3"
        android:textColor="@color/white"

        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/radioButton"
        android:layout_alignEnd="@+id/radioButton"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4Credit"
        android:textColor="@color/white"

        android:id="@+id/crSub4"
        android:layout_below="@+id/radioButton2"
        android:layout_alignLeft="@+id/radioButton2"
        android:layout_alignStart="@+id/radioButton2"
        android:checked="false" />
</RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/EnterButton"
        android:layout_below="@+id/gSel"
        android:layout_toRightOf="@+id/ResetButton"
        android:layout_toEndOf="@+id/ResetButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/ResetButton"

        android:layout_below="@+id/gSel"
        android:layout_alignRight="@+id/calculateGpaButton"
        android:layout_alignEnd="@+id/calculateGpaButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate GPA "
        android:id="@+id/calculateGpaButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/GpaTextView"
        android:layout_alignStart="@+id/GpaTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your GPA:"
        android:textColor="@color/white"
        android:id="@+id/GpaTextView"
        android:layout_below="@+id/calculateGpaButton"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advice:"
        android:textColor="@color/white"
        android:id="@+id/adviceTextView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/GpaTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Your Grade Here and select the subject credit from the radio buttons"
        android:id="@+id/textView2"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gSel"
        android:layout_alignEnd="@+id/gSel"
        android:layout_alignLeft="@+id/EnterButton"
        android:layout_alignStart="@+id/EnterButton"
        android:layout_above="@+id/gSel" />

</RelativeLayout>